'use client';

import { useState, useEffect } from "react";
import { useRouter } from "next/navigation";

export default function NumberDetails() {
  const router = useRouter();
  const { number } = router.query; // Get the dynamic route parameter
  const [details, setDetails] = useState(null);

  useEffect(() => {
    if (!number) return; // Wait until `number` is available

    async function fetchNumberDetails() {
      try {
        const response = await fetch(`${process.env.NEXT_PUBLIC_BASE_URL}/numbers/${number}`);
        const data = await response.json();
        setDetails(data);
      } catch (error) {
        console.error("Error fetching number details:", error);
      }
    }

    fetchNumberDetails();
  }, [number]);

  if (!details) {
    return <p>Loading...</p>;
  }

  return (
    <>
      <h1>Number Details</h1>
    </>
  );
}
